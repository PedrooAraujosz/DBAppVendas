@model AppVendas.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutoNome" class="control-label"></label>
                <input asp-for="ProdutoNome" class="form-control" />
                <span asp-validation-for="ProdutoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtadeEstoque" class="control-label"></label>
                <input asp-for="QtadeEstoque" class="form-control" />
                <span asp-validation-for="QtadeEstoque" class="text-danger"></span>
            </div>



            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary d-flex align-items-center px-5 mt-3 w-100 justify-content-center py-3">
                            <ion-icon name="save" class="me-2"></ion-icon> Salvar
                        </button>
                    </div>
                </div>
                <div class="col-4"></div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-outline-info d-flex align-items-center px-5 mt-3 w-100 justify-content-center py-3">
                        <ion-icon name="arrow-back" class="me-2"></ion-icon>Voltar
                    </a>
                </div>
            </div>
        </form>
    </div>




    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
