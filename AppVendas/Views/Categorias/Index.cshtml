@model IEnumerable<AppVendas.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h1 class="display-5 text-center mt-3">Cadastro de Categorias</h1>

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center"> Cadstro de Categorias </span>

    <a asp-action="Create" class="btn btn-secondary px-5 w-25 d-flex align-items-center  justify-content-center">
        <ion-icon neme="add-circle-outline" class="fs-4"></ion-icon><span class="fs-4 ms-2 fst-italic">Adcionar</span>
    </a>
</div>

<table class="table table-dark table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th class="bg-black"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoriaNome)
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-otline-secondary align-items-center">

                        <ion-icon name="create"></ion-icon>Editar

                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-otline-secondary align-items-center ms-2"></a>
                    <ion-icon name="close"></ion-icon> Excluir
                </td>
            </tr>
        }
    </tbody>
</table>
<div />
